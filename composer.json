{
  "name": "derbenni/wp-di",
  "type": "library",
  "description": "A lightweight dependency injection container for WordPress.",
  "keywords": [
    "di",
    "dependency injection",
    "container"
  ],
  "license": "GPLv3",
  "authors": [
    {
      "name": "Benjamin Hofmann",
      "email": "benni@derbenni.rocks"
    }
  ],
  "require": {
    "php": "^7.0",
    "container-interop/container-interop": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "php-mock/php-mock-phpunit": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "derbenni\\wp\\di\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "derbenni\\wp\\di\\test\\": "test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit -c phpunit.xml.dist --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
  }
}
